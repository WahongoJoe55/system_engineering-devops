#!/usr/bin/env bash
# Find the PID of the 4-to_infinity_and_beyond script

PROCESS_NAME="4-to_infinity_and_beyond"

# Find the PID(s) of the process
PIDS=$(pgrep -f "$PROCESS_NAME")

if [ -z "$PIDS" ]; then
    echo "No process named $PROCESS_NAME found."
else
    echo "Found process(es) with PID(s): $PIDS"
    # Kill the process(es)
    kill $PIDS
    echo "Process(es) terminated."
fi
